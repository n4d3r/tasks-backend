pipeline {
	agent any

    options { disableConcurrentBuilds() }

    
	stages {


      	stage('Build') {
			steps {

                echo "-----INÍCIO - BUILD-----"
	      		sh "mvn clean package -DskipTests=true"
	           	echo "-----FIM - BUILD-----"
          	}
      	}

        stage('Sonar Analysis'){
            steps{
                echo "-----INÍCIO - ANÁLISE SONAR-----"     
                environment {
                    scannerHome = tool 'SONAR_SCANNER'
                }           
                withSonarQubeEnv('SONAR_LOCAL'){
                    sh "${scannerHome}/bin/sonar-scanner -e   -Dsonar.projectKey=conta-corrente-teste -Dsonar.host.url=http://192.168.99.100:9000 -Dsonar.login=85aaa89d493485b218b969357cb8f288e9b0ff23 -Dsonar.java.binaries=target"
                }                
            }

            
        }

        stage('Quality Gate'){
            steps{
                echo "-----INÍCIO - QUALITY GATE-----"
                sleep(30)
                timeout(time: 1, unit: 'MINUTES'){
                    waitForQualityGate abortPipeline: true
                }
            }
        }

   	}
}